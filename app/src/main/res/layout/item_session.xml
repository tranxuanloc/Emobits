<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp">

    <ImageView
        android:id="@+id/item_iv_session_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="@string/description_thumbnail" />

    <ImageView
        android:id="@+id/ivArrowPlay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/circle_play_shape"
        android:clickable="true"
        android:contentDescription="@string/description_icon_play"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_play" />

    <TextView
        android:id="@+id/item_tv_session_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_iv_session_thumbnail"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_tv_session_emotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_session_name"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:singleLine="true"
        android:textColor="#B2FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>